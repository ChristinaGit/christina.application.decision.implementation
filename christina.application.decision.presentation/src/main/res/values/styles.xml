<resources>

    <style name="DecisionApplicationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="templatesToolbar_AppBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="templatesToolbar_PopupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="DecisionApplicationTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DecisionsViewerTheme" parent="DecisionApplicationTheme.NoActionBar">
        <item name="templatesViewer_FabIcon">@drawable/ic_add</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
